{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
  },
  // üëáÔ∏è this may vary depending on how you
  // name your test files
  "exclude": [
    "node_modules",
    "dist",
    ".vite-storybook",
    "storybook-static",
    "__tests__",
    "__tests__/**/*.ts",
    "__tests__/*.ts",
  ],
  "include": [
    "src",
    "@types",
    "src/index.ts",
    "vite.config.ts",
    "src/**/*.svg",
    "src/**/*.png",
    "src/**/*.jpg",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    ".storybook/stories",
  ],
}